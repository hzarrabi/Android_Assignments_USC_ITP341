<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:columnCount="2"
    android:rowCount="4"
    >


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AmericanButton"
        android:src="@drawable/american"
        android:layout_alignBottom="@+id/ItalianButton"
        android:layout_alignParentStart="true"
        android:layout_row="0"
        android:layout_column="0" />



    <ImageButton
        android:layout_width="236dp"
        android:layout_height="248dp"
        android:id="@+id/ChineseButton"
        android:src="@drawable/chinese"
        android:layout_below="@+id/AmericanButton"
        android:layout_row="0"
        android:layout_column="0" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IndianButton"
        android:layout_alignTop="@+id/ChineseButton"
        android:layout_marginTop="71dp"
        android:src="@drawable/indian"
        android:layout_alignEnd="@+id/ChineseButton"
        android:layout_row="0"
        android:layout_column="1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ItalianButton"
        android:src="@drawable/italian"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_row="1"
        android:layout_column="0" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:src="@drawable/portuguese"
        android:layout_below="@+id/ItalianButton"
        android:layout_alignParentEnd="true"
        android:layout_row="2"
        android:layout_column="0" />

</GridLayout>
