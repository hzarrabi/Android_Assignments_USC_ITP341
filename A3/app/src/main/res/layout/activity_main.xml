<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:columnCount="2"
    android:rowCount="3"
    android:layout_gravity="center"
    >


    <!--american layout-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_row="0"
        android:layout_column="0"
        >

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/AmericanButton"
            android:src="@drawable/american"
            android:scaleType="fitXY"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <!--chinese layout-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_row="0"
        android:layout_column="1"
        >
        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/ChineseButton"
            android:src="@drawable/chinese"
            android:scaleType="fitXY"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <!--Indian Layout-->
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_row="1"
        android:layout_column="0"
        >
        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/IndianButton"
            android:src="@drawable/indian"
            android:scaleType="fitXY"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView3" />
    </LinearLayout>

    <!--Italian Layout-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_row="1"
        android:layout_column="1"
        >
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/ItalianButton"
            android:src="@drawable/italian"
            android:scaleType="fitXY"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView4"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <!--Middle East Layout-->
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_row="2"
        android:layout_column="0"
        >
        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/MiddleEastButton"
            android:src="@drawable/middle_east"
            android:scaleType="fitXY"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView5" />
    </LinearLayout>

    portugese layout
    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_row="2"
        android:layout_column="1"
        >
        <ImageButton
            android:layout_gravity="center_horizontal"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/PortugeseButton"
            android:src="@drawable/portuguese"
            android:scaleType="fitXY"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView6"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>


</GridLayout>
