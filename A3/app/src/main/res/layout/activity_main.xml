<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:columnCount="2"
    android:rowCount="3"

    android:layout_gravity="center"
    >


    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/AmericanButton"
        android:src="@drawable/american"
        android:layout_row="0"
        android:layout_column="0"
        android:scaleType="fitXY"
        />



    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/ChineseButton"
        android:src="@drawable/chinese"
        android:layout_row="0"
        android:layout_column="1"
        android:scaleType="fitXY"
        />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/IndianButton"
        android:src="@drawable/indian"
        android:layout_row="1"
        android:layout_column="0"
        android:scaleType="fitXY"
        />


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/ItalianButton"
        android:src="@drawable/italian"
        android:layout_row="1"
        android:layout_column="1"
        android:scaleType="fitXY"
        />


    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/MiddleEastButton"
        android:src="@drawable/middle_east"
        android:layout_row="2"
        android:layout_column="0"
        android:scaleType="fitXY"
        />


    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/PortugeseButton"
        android:src="@drawable/portuguese"
        android:layout_row="2"
        android:layout_column="1"
        android:scaleType="fitXY"
        />

</GridLayout>
